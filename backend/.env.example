# Django Backend Environment Variables

# Django Core Settings
DEBUG=1
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,frontend

# Database Configuration
DATABASE_URL=postgresql://forewarn_user:forewarn_password@postgres:5432/forewarn_ibf
DB_NAME=forewarn_ibf
DB_USER=forewarn_user
DB_PASSWORD=forewarn_password
DB_HOST=postgres
DB_PORT=5432

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000
CORS_ALLOW_CREDENTIALS=True

# API Settings
API_VERSION=v1
API_TITLE=FOREWARN IBF Portal API
API_DESCRIPTION=Backend API for FOREWARN IBF Portal Dashboard

# Email Configuration (for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Redis (for caching and sessions)
REDIS_URL=redis://redis:6379/0

# File Storage
MEDIA_URL=/media/
STATIC_URL=/static/

# Security Settings
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
